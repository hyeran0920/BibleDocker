<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.bible.address.respository.IAddressRepository">
    <!-- ResultMap 정의 -->
    <resultMap id="addressResultMap" type="Address">
        <id property="addressId" column="address_id"/>
        <result property="memId" column="mem_id"/>
        <result property="postcode" column="postcode"/>
        <result property="address" column="address"/>
        <result property="detailAddress" column="detail_address"/>
    </resultMap>
    
	<!-- Member ID로 address 조회 -->
	<select id="selectAddressesByMemId" parameterType="int" resultMap="addressResultMap">
	    SELECT 
	        address_id,
	        mem_id,
	        postcode,
	        address,
	        detail_address
	    FROM address
	    WHERE mem_id = #{memId}
	</select>
		
	<!-- address 조회 -->
	<select id="seleAddress" resultMap="addressResultMap">
	    SELECT 
	        address_id,
	        mem_id,
	        postcode,
	        address,
	        detail_address
	    FROM address 
	    WHERE address_id = #{addressId}
	</select>
	
    <!-- Address 등록 -->
	<insert id="insertAddress" parameterType="Address" useGeneratedKeys="true" keyProperty="addressId" keyColumn="address_id">
	    INSERT INTO address (
	        mem_id,
	        postcode,
	        address,
	        detail_address
	    ) VALUES (
	        #{memId},
	        #{postcode},
	        #{address},
	        #{detailAddress}
	    )
	</insert>

	<!-- Address 수정 -->
	<update id="updateAddress" parameterType="Address">
	    UPDATE address SET
	        postcode = #{postcode},
	        address = #{address},
	        detail_address = #{detailAddress}
	    WHERE address_id = #{addressId}
	</update>
    
	<!-- Member Id를 이용해 Address 삭제 -->
	<delete id="deleteAddressesByMemId" parameterType="int">
	    DELETE FROM address
	    WHERE mem_id = #{memId}
	</delete>
	
	<!-- Address 삭제 -->
	<delete id="deleteAddress" parameterType="int">
	    DELETE FROM address
	    WHERE address_id = #{addressId}
	</delete>
</mapper>